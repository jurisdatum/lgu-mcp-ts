{
  "name": "@legislation-uk/mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol server for UK legislation (legislation.gov.uk)",
  "type": "module",
  "bin": {
    "legislation-gov-uk": "./build/index.js"
  },
  "scripts": {
    "prebuild": "npm run generate-manifest",
    "build": "npm run build:tsc && npm run build:copy",
    "build:tsc": "tsc",
    "build:copy": "copyfiles -u 1 'src/resources/**/*' build/ && copyfiles -u 1 'src/generated/**/*' build/",
    "generate-manifest": "node scripts/generate-resource-manifest.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:tsc": "tsc --watch",
    "watch:copy": "copyfiles -u 1 'src/resources/**/*' build/ --watch",
    "start": "node build/index.js",
    "inspector": "npx @modelcontextprotocol/inspector node build/index.js",
    "test": "npm run build && node --test build/test/**/*.test.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "legislation",
    "uk-law",
    "legal-data"
  ],
  "author": "The National Archives",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "fast-xml-parser": "^5.3.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
